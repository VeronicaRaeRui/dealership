<%- include ('partials/header.ejs') %>

<body>

    <% if(loginStatus) { %>
        <%if(deleteErrorMessage) { %>
        <div class="container mx-auto pt-5">
            <p class="text-center"> Can't delete the user <%= deleteErrorMessage %> </p>
            </div> 
        <% }%>
    <div class="container align-items-center">
        
        <h1>Search Customer</h1>
        <form name="searchform" action="/searchCustomer" method="POST">
        
            
        <div class="mb-3">
            <label for="formControlInput" class="form-label">First Name: </label>
            <input type="text" name="firstName" class="form-control" placeholder="Search by first name" aria-describedby="basic-addon1">
        </div>
    
        <div class="mb-3">
            <label for="formControlInput" class="form-label">Last Name: </label>
            <input type="text" name="lastName" class="form-control" placeholder="Search by last name" aria-describedby="basic-addon1">
        </div>

        

        <div class="mb-3">
            <label for="formControlInput" class="form-label">Phone: </label>
            <input type="text" name="phone" class="form-control" placeholder="Search by phone" aria-describedby="basic-addon1">
        </div>

        <div class="mb-3">
            <label for="formControlInput" class="form-label">Email: </label>
            <input type="text" name="email" class="form-control" placeholder="Search by email" aria-describedby="basic-addon1">
        </div>

        <div class="mb-3">
            <label for="formControlInput" class="form-label">Company: </label>
            <input type="text" name="company" class="form-control" placeholder="Search by company name" aria-describedby="basic-addon1">
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
        </form>
    </div>


    <!--display results-->
    <div class="container align-items-center p-3">
        <% if (customers.length > 0) { %>

            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">First Name</th> 
                    <th scope="col">Last Name</th> 
                    <th scope="col">Email</th>
                    <th scope="col"> </th>
    
                    </tr>
                </thead>
                <tbody>
        <% customers.forEach((customer, index) => { %>
       
        <tr>
            <td><a href= "/customerDetail/<%= customer.customer_id%>"><%= customer.first_name%></a></td>
            <td><a href= "/customerDetail/<%= customer.customer_id%>"><%= customer.last_name%></a></td>
            <td><a href= "/customerDetail/<%= customer.customer_id%>"><%= customer.email%></a></td>

            <td><a href="/editCustomer/<%= customer.customer_id%>" class="btn btn-primary btn-sm">Edit</a></td>
            <td><a href="/deleteCustomer/<%= customer.customer_id%>" class="btn btn-primary btn-sm">Delete</a></td>
            
        </tr>
        <% }) %>
            </tbody>
        </table>
        

        <% } else {
            if(methodPost) { %>
            <div class="container mx-auto pt-5">
            <p class="text-center">No customers found. Go <a href="/addCustomer" >here</a> to add customer.</p>
            </div>    
        <% }
    
    }%>

    </div>

    
    <% }else {  %>
    <div class="container mx-auto pt-5">
    <p class="text-center">Please <a href="/login" >login</a> first.</p>
    </div>
<% } %>

</body>

<footer></footer>

</html>